{
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "none",
  "printWidth": 100,
  "semi": false,
  "tabWidth": 2,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "semi": true,
        "useTabs": false,
        "tabWidth": 2,
        "bracketSpacing": true
      }
    }
  ]
}
