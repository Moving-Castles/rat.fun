{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "target": "ES2020",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }