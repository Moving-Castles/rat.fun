{
    "compilerOptions": {
      "target": "es2021",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": false,
      "outDir": "dist",
      "isolatedModules": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": ".",
        "paths": {
          "@config": ["src/config"],
          "@routes/*": ["src/routes/*"],
          "@modules/*": ["src/modules/*"],
          "@sanity-types": ["../cms/sanity.types"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"] 
  }